--- a/lang/golang/golang-build.sh
+++ b/lang/golang/golang-build.sh
@@ -141,6 +141,32 @@ build() {
 		retval=1
 	fi
 
+	if [ "$retval" -eq 0 ]; then
+		log "Compressing binaries with sstrip + upx"
+		local OPENWRT_STRIP="${STAGING_DIR_HOST}/bin/sstrip"
+		find "$GO_BUILD_BIN_DIR" -type f -executable -print0 | while IFS= read -r -d '' bin; do
+			# Skip non-ELF file
+			if file "$bin" | grep -qv 'ELF'; then
+				log "Skipping non-ELF binary: $bin"
+				continue
+			fi
+
+			# Apply sstrip to binaries
+			if [ -f "$OPENWRT_STRIP" ]; then
+				log "[INFO] Stripping symbols from $bin"
+				"$OPENWRT_STRIP" "$bin" 2>/dev/null || log "[WARN] sstrip failed for $bin"
+			fi
+
+			# Compress using upx
+			log "[INFO] Compressing $bin with UPX"
+			if upx --best --lzma --strip-relocs=0 "$bin" >/dev/null 2>&1; then
+				log "[SUCCESS] $bin compressed successfully"
+			else
+				log "[ERROR] UPX compression failed for $bin (Code: $?)"
+			fi
+		done
+	fi
+
 	if [ "$retval" -ne 0 ]; then
 		cache_cleanup
 	fi
